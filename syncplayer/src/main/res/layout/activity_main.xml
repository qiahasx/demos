<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SyncPlayerActivity">

    <TextView
        android:id="@+id/btn_pick_file"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="pick_file"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_action"
        app:layout_constraintVertical_chainStyle="packed" />


    <TextView
        android:id="@+id/btn_action"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:layout_marginTop="44dp"
        android:text="play"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pick_file" />

    <TextView
        android:id="@+id/btn_seek"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:gravity="center"
        android:text="Seek To 1:00"
        android:layout_marginTop="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_pick_file" />

</androidx.constraintlayout.widget.ConstraintLayout>